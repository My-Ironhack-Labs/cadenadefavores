
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar favor EVA</h1>
            <hr>
            <form method="POST" action="/favores/editar/{{_id}}">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input name="title" type="text" class="form-control" id="title" value="{{title}}" >
                </div>
                <div class="form-group">
                    <label for="description"> Descripción</label>
                    <input name="description" type="text" class="form-control" id="description"value="{{description}}">
                </div>
                  
                <button type="submit" class="btn btn-dark">Guardar cambios</button>
                <a href="/favores" class="btn btn-outline-dark">Favores</a>
            </form>
        </div>
    </div>