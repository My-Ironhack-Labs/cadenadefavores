<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h2> Detalles Favores</h2>
    <hr>
      <ul>
        <li class="favourList">
          <p>{{favour.title}}</p>
          <p>{{favour.description}}</p>
          <p>{{favour.address}}</p>
          {{#unless favour.started}}
          <form method="POST" action="/favores/detalles/{{favour._id }}">
            <div class="form-group">
              <label for="status">Status: {{favour.status}}</label>
              <input name="status" type="text" class="form-control d-none" id="status" value="required" readonly>
            </div>
            <div class="form-group">
              <label for="started">started: {{favour.started}}</label>
              <input name="started" type="text" class="form-control d-none" id="started" value="true" readonly>
            </div>
             <div class="form-group">
              <label for="id">id: {{id}}</label>
              <input name="give" type="text" class="form-control d-none" id="id" value="{{id}}" readonly>
            </div>
            <button id="hacerFav" type="submit" class="btn btn-light">Hacer favor</button>
          </form>   
      
          {{/unless}}

          {{#if favour.started}}
          <form method="POST" action="/favores/detalles/terminar/{{favour._id }}">
            <div class="form-group">
              <label for="status">Status: {{favour.status}}</label>
              <input name="status" type="text" class="form-control d-none" id="status" value="done" readonly>
            </div>
            <div class="form-group">
              <label for="finished">Finished: {{favour.finished}}</label>
              <input name="finished" type="text" class="form-control d-none" id="finished" value="true" readonly>
            </div>
            <button id="hacerFav" type="submit" class="btn btn-light">Finalizar favor</button>
          </form>
          {{/if}}
          <a class="btn btn-light" href="/favores/editar/{{favour._id}}">Editar</a>
          <a href="/favores" class="btn btn-light">Favores</a>
          <form method="POST" action="/favores/eliminar/{{favour._id}}">
            <button type="submit" class="btn btn-light">Borrar</button>
          </form>
          <hr>
        </li>
      </ul>
    </div>
  </div>

